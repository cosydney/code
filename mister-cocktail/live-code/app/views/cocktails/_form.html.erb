<%= simple_form_for(@cocktail) do |f| %>
  <% f.error_notification %>
  <%= f.input :name %>
  <%= f.fields_for :doses do |d| %>
    <%= d.input :description %>
    <%= d.select :ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name) %>
  <% end %>
  <%= f.submit %>
<% end %>
